{
  storage file_system /data
}

# Vaultwarden - HTTPS only with internal CA
beelink.vault {
  reverse_proxy vaultwarden:80
  tls internal
}

# Wiki.js - HTTP only
http://beelink.wiki {
  reverse_proxy wikijs:3000
}

# Immich - HTTP only
http://beelink.immich {
  reverse_proxy immich_server:2283
}

# Nextcloud - HTTP only
http://beelink.nas {
  reverse_proxy nextcloud:80
}

# Grafana - HTTP only
http://beelink.grafana {
  reverse_proxy grafana:3000
}

# Portainer - HTTP only
http://beelink.portainer {
  reverse_proxy portainer:9000
}

# Glances - HTTP only
http://beelink.glances {
  reverse_proxy glances:61208
}

